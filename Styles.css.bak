body {
font-size: 100%;
}

header {
width: auto;
height: 550px;
}

footer {
position: relative;
border-top: solid black 5px;
width: auto;
height: 80px;
}

article {
 height: auto;
 text-align: left;
}

h1 {
font-size: 2.5em;
text-align: center;
}

p{
margin-left: auto;
margin-right: auto;
font-size: 1.25em;
white-space: wrap;
width: 85%; 
padding: 15px;
}

.bg-img{
	
	width: auto;
	border-bottom: solid black 5px;
	background-color: red;
}
.container {
  float: right;
  margin: 20px;
  width: auto;
}

.topnav {
  overflow: hidden;
  background-color: #333;
}

.topnav a {
  float: left;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.topnav a:hover {
  background-color: #ddd;
  color: black;
}

.entertainmentContainer{
	padding: 15px;
}

.entertainment-left{
	padding-top: 25px;
	width: auto;
	height: 315px;
}

.entertainment-right{
	padding-top: 25px;
	width: 100%;
	height: 315px;
}

.contentContainer{
text-align: center;	
}

.column {
  display: inline-block;
  width: auto;
  margin: 25px;
  padding: 15px;
}



.smilesImage {
margin: 15px;
float: left;
width: 425px;
height: 255px;
border: solid black 3px;
}

.astroImage {
margin: 15px;
float: right;
width: 550px;
height: 250px;
border: solid black 3px;
}

.footerLink {
 width: 75px;
 height: 45px;
 margin: 10px;
 border: solid  black 2px;
 border-radius: 50%;
 background-color: grey;
}

#bookingBar {
margin-left: auto;
margin-right: auto;
width: 38%;
height: 35px;
border: solid black 2px;
background-color: white;
z-index: 2;
position: relative;
top: -150px;
}

#linkContainer {
	width: 20%;
	height: 50px;
	margin-top: 15px;
	margin-left: auto;
	margin-right: auto;
	display: flex;
	justify-content: center;
	align-items: center;
}