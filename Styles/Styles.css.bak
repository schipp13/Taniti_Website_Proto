body, html {
  height: 100%;
  margin: 0;
  font-size: 100%;
}

h1 {
font-size: 2.5em;
text-align: center;
}

h2 {
text-align: center;
}

p {
text-align: center;	
}
#heroImage{
  border-bottom: solid black 5px;
  background-image: url("../Resources/Images/Island.jpg");
  height: 50%;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
}
/*---------------------------------------------------------*/
footer {
position: relative;
border-top: solid black 5px;
width: auto;
height: 75px;
margin: 15px;
}

#tripBundleClickToAction {
position: fixed;
bottom: 20px;
right: 30px;
z-index: 99;
font-size: 18px;
background-color: lightgrey;
color: black;
cursor: pointer;
padding: 15px;
border-radius: 4px;
text-decoration: none;
}

.footerLink {
display: inline-block;
width: 75px;
height: 40px;
margin-left: auto;
margin-right: auto;
border: solid  black 2px;
border-radius: 50%;
background-color: grey;
}

.question {
margin-top: 15px;
margin-left: 0;
}

.answer {
margin-top: 8px;
margin-left: 2%;
}
/*---------------------------------------------------------*/
.topnav {
overflow: hidden;
background-color: lightgrey;
opacity: 0.8;
float: right;
margin-right: 80px;
margin-top: 30px;
width: auto;
z-index: 2;
}

.topnav a {
float: left;
color: black;
text-align: center;
padding: 14px 16px;
text-decoration: none;
font-size: 17px;
}

.topnav a:hover {
background-color: #ddd;
color: grey;
}